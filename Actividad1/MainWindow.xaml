<Window x:Class="Actividad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad1"
        mc:Ignorable="d"
        Title="Adivina el número" Height="200" Width="400"
        Icon="./Iconos/random.ico">
    <Grid>
        <TextBlock
            Text="¿Qué número he pensado?" 
            Height="25px" 
            Margin="10,27,229.6,68.8"
            VerticalAlignment="Center"/>
        <TextBox
            x:Name="eleccionUsuario"
            Height="25px"
            Margin="169,52,176,0"
            VerticalAlignment="Top" />
        <TextBlock
            x:Name="resultado"
            Height="25px" 
            Margin="242,27,9.6,68.8"/>
        <Button
            x:Name="comprobar"
            Content="Comprobar" 
            Margin="20,114,272.6,19.4"
            Click="Comprobar_Click"/>
        <Button
            x:Name="reiniciar"
            Content="Reiniciar" 
            Margin="145,114,147.6,19.4"
            Click="Reiniciar_Click"/>
    </Grid>
</Window>
